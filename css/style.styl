// Variables
transitionTiming=cubic-bezier(0.455, 0.030, 0.515, 0.955)
vendors=official

// Fonts
@font-face {
  font-family: 'MontserratLight';
  src: url('../fonts/Montserrat-Light.woff') format('woff');
  src: url('../fonts/Montserrat-Light.woff2') format('woff2');
}
@font-face {
  font-family: 'DosisLight';
  src: url('../fonts/Dosis-Light.woff') format('woff');
  src: url('../fonts/Dosis-Light.woff2') format('woff2');
}

// Mixins
fullWidth() {
  width: 100%;
  height: 100%;
}
hidden() {
  opacity: 0;
  visibility: hidden;
}

visible() {
  opacity: 1;
  visibility: visible;
}

noSelect() {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  //pointer-events: none;
}

centerItem() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

//Animations

// General Styles
::selection {
  color: white;
  background-color: accent;
}

html, body {
  margin: 0;
  padding: 0;
  fullWidth();
}

html {
  font-size: 10px;
}

body {
  font-family: 'MontserratLight', sans-serif;
  font-size: 1.6rem;
  font-weight: 400;
  color: #fff;
  background-color: #000;
  overflow: hidden;
}

.noScroll {
  overflow: hidden;
}

h1, h2, h3 {
  font-family: 'DosisLight', sans-serif;
  font-weight: 400;
  text-transform: uppercase;
  text-align: center;
  color: #fff;
  margin: 0;
}

h1 {
  font-size: 7.2rem;
}

h2 {
  font-size: 3.6rem;
}

h3 {
  font-size: 2.4rem;
}

a {
  color: inherit;
  text-decoration: none;
}

p {
  line-height: 2;
}

nav, .card {
  noSelect();
}

//Flex
.projects, .card, .page, .project {
  display: flex;
  margin: auto;
}

.project {
  margin: auto 0;

  .card {
    animation: .5s cardIn transitionTiming;
    animation-delay: 1.75s;
    animation-fill-mode: backwards;
  }

  &:last-child .card {
    animation-delay: 2s;
  }
}

//Projects
.projects {
  height: 100vh;
  justify-content: center;
}

.card {
  cursor: pointer;
  position: relative;
  overflow: hidden;
  width: 30rem;
  height: 40rem;
  border: 1px solid rgba(255,255,255,.2)
  margin: auto 0;
  margin-right: 2rem;

  &:last-child {
    margin-right: 0;
  }

  &.shrink {
    transform: scale(0);
    -webkit-filter: blur(10px);
    opacity: 0;
    border-color: transparent;
  }

  &, & * {
    transition: .35s transitionTiming all;
  }

  h2, .info {
    centerItem();
  }

  &:hover h2 {
    top: 25%;
    opacity: 0;
  }

  &:hover .info {
    visible();
    transform: translate(-50%,-50%) scale(1);
    -webkit-filter: blur(0);
  }

  .info {
    transform: translate(-50%,-50%) scale(0);
    -webkit-filter: blur(3px);
    hidden();
  }
}

.background {
  position: absolute;
  top: 0;
  left: 0;
  fullWidth();
  margin-bottom: 0.2%;
  background-size: cover;
  background-position: center center;
  z-index: -1;
  opacity: 0;
  transition: .35s transitionTiming all;

  &.open {
    opacity: .5;
  }

  &.yali {
    background-image: url("../assets/yali.jpg");
  }
  &.metro {
    background-image: url("../assets/metro.jpg");
  }
}

.page {
  hidden();
  fullWidth();
  position: absolute;
  top: 0;
  left: 0;

  &.open {
    visible();
  }

  .content {
    display: flex;
    height: 100%;
    width: 50%;
    margin: auto;
    flex-direction: column;
  }

  h1, p, .go {
    margin: auto;
    transition: .5s all transitionTiming;
  }

  h1 {
    opacity: 0;
    -webkit-filter: blur(3px);
    transform: translateY(-25%);
    &.open {
      opacity: 1;
      -webkit-filter: blur(0);
      transform: translateY(0);
      transition-delay: .35s;
    }
  }
  p {
      min-width: 50vw;
      opacity: 0;
      -webkit-filter: blur(3px);
      transform: translateX(-25%) skewX(-10deg);
      &.open {
        opacity: 1;
        -webkit-filter: blur(0);
        transform: translateX(0) skewX(0);
        transition-delay: .5s;
      }
  }
}

.button {
  box-sizing: border-box;
  width: 8rem;
  height: 8rem;
  line-height: 8rem;
  text-transform: uppercase;
  text-align: center;
  font-size: 1.6rem;
}

//Border
.button:after {
  display: inline-block;
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border: 1px solid rgba(255,255,255,.2);
  border-radius: 50%;
  box-sizing: border-box;
  transition: .35s all transitionTiming;
}

//Hover
.button:hover:after {
  transform: scale(1.05);
  opacity: 1;
}

//Active
.button:active:after {
  transform: scale(.95);
  opacity: .5;
}

.go {
  opacity: 0;
  -webkit-filter: blur(3px);
  transform: translateY(25%);

  &.open {
    opacity: 1;
    -webkit-filter: blur(0);
    transform: translateY(0);
    transition-delay: .75s;
  }
}

@keyframes loading {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  25% {
    transform: scale(1);
    opacity: 1;
  }
  75% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(0);
    opacity: 0;
  }
}
@keyframes loadingInner {
  0% {
    width: 0;
    height: 0;
  }
  100% {
    width: 100%;
    height: 100%;
  }
}

.loading {
  position: absolute;
  right: 2rem;
  bottom: 2rem;
  width: 4rem;
  height: 4rem;
  overflow: hidden;
  transform: scale(0);
  border-radius: 100%;
  background-color: rgba(255,255,255,.1);
  transition: .35s all transitionTiming;

  &.open {
    transform: scale(1);
    animation: 1.5s loading transitionTiming;
    animation-fill-mode: both;
  }

  .inner {
    centerItem();
    width: 0;
    height: 0;
    border-radius: 100%;
    background-color: white;

    &.open {
      width: 100%;
      height: 100%;
      animation: 1.35s loadingInner transitionTiming;
      animation-fill-mode: both;
    }
  }
}

.back {
  cursor: pointer;
  position: absolute;
  left: 2rem;
  height: 6rem;
  line-height: 6rem;
  text-transform: uppercase;
  opacity: 0;
  visibility: hidden;
  transform: translateX(-25%);
  -webkit-filter: blur(3px);
  transition: .35s all transitionTiming;


  &.open {
    transition-delay: .35s;
    opacity: 1;
    visibility: visible;
    transform: translateX(0);
    -webkit-filter: blur(0);
  }
}

nav {
  position: fixed;
  height: 6rem;
  width: 100%;
  z-index: 1;
  background-color: rgba(0,0,0,.25);
  color: rgba(255,255,255,.75);
  -webkit-backdrop-filter: blur(6px);

  &, span, a {
    transition: .35s all transitionTiming;
  }

  span:hover, a:hover {
    color: #fff;
  }
}

@keyframes slideLeft {
  0% {
  opacity: 0;
  transform: translateX(25%);
  -webkit-filter: blur(3px);
  }
  100% {
    opacity: 1;
    transform: translateX(0);
    -webkit-filter: blur(0);
  }
}

.connect {
  cursor: pointer;
  position: absolute;
  right: 2rem;
  height: 6rem;
  line-height: 6rem;
  text-transform: uppercase;
  opacity: 0;
  animation: .5s slideLeft transitionTiming;
  animation-delay: 1.5s;
  animation-fill-mode: both;
}

.menu {
  position: absolute;
  left: 50%;
  transform: translate(-50%, -25%);
  hidden();
  line-height: 6rem;
  text-transform: uppercase;
  -webkit-filter: blur(3px);
  transition: .35s all transitionTiming;

  a:not(:last-child) {
    margin-right: 2rem;
  }

  &.open {
    visible();
    -webkit-filter: blur(0px);
    transform: translate(-50%, 0);
  }
}

@media (max-width: 768px) {
  h1 {
    font-size: 3.6rem;
  }

  p {
    font-size: 1.4rem;
    text-align: justify;
  }

  .page {
    .content {
      width: 85%;
      height: 100% -8rem;
      margin: 0 auto;
      padding-top: 6rem;
      padding-bottom: 2rem;
      box-sizing: border-box;
    }
  }

  .project {
    &:first-child .card {
      border-bottom: 1px solid rgba(255,255,255,.2);
    }
  }

  .projects {
    flex-direction: column;
  }

  .card {
    width: 100vw;
    height: 50vh;
    margin: 0;
    border: 0;

      .go {
        width: 6rem;
        height: 6rem;
        line-height: 6rem;
        font-size: 1.4rem;
      }
    }

    nav {
      &.open {
        height: 12rem;
      }
    }

    .menu {
      top: 6rem;
      width: 100%;
      text-align: center;
    }
}

@keyframes slideDown {
  0% {
    opacity: 0;
    -webkit-filter: blur(3px);
    transform: translateY(-25%);
  }
  25% {
    opacity: 1;
    -webkit-filter: blur(0);
    transform: translateX(0);
  }
  75% {
    opacity: 1;
    -webkit-filter: blur(0);
    transform: translateX(0);
  }
  100% {
    opacity: 0;
    -webkit-filter: blur(3px);
    transform: translateY(25%);
  }
}

@keyframes fadeOut {
  0% {
    visible();
  }
  100% {
    hidden();
  }
}

@keyframes cardIn {
  0% {
  opacity: 0;
  transform: scale(0);
  -webkit-filter: blur(3px);
  }

  50% {
    transform: scale(1.05);
  }

  100% {
    opacity: 1;
    transform: scale(1);
    -webkit-filter: blur(0);
  }
}

//Welcome Page
#welcome {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  background-color: #000;
  fullWidth();
  animation: .35s fadeOut transitionTiming;
  animation-delay: 1.35s;
  animation-fill-mode: both;
  noSelect();

  h1 {
    margin: auto;
    animation: 1.5s slideDown transitionTiming;
    animation-fill-mode: both;
  }
}
